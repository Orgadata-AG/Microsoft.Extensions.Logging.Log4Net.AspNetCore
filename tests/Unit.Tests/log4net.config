<log4net>
  <appender name="TestAppender"
            type="log4net.Appender.MemoryAppender">
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="%property{scope} %message%newline" />
    </layout>
  </appender>
  <root>
    <level value="TRACE" />
    <appender-ref ref="TestAppender" />
  </root>
</log4net>